package account;

public class UserAccount {

	String id;
	String pwd;
	String name;
	boolean isOnline;
	
	public UserAccount (String id, String pwd, String name) {
		this.id = id;
		this.pwd = pwd;
		this.name = name;
		this.isOnline = false;
	}
	
	public boolean login(String id, String pwd) {
		if (this.id.equals(id) && this.pwd.equals(pwd)) {
			isOnline = true;
		}
		
		return isOnline;
	}
}
